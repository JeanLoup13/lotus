{# src/LotusBundle/Resources/views/Image/list.html.twig #}
{% extends "LotusBundle::layout.html.twig" %}
{% block title %}{{ parent() }} Liste des Images {% endblock %}
{% block body %}
<h3>Liste des images</h3>
<div class="row" style="background-color:white; padding:32px;">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col" colspan="2"><i class="glyphicon glyphicon-tag" aria-hidden="true"></i> Libelle</th>
                <th><i class="glyphicon glyphicon-tag" aria-hidden="true"></i> Alt</th>
                <th scope="col"><i class="fa fa-cogs" aria-hidden="true"></i> Actions</th>
            </tr>
        </thead>
        <tbody>
    {% for image in listImages %}
            <tr> 
              
                <td>{{ image.id}}</td>
                <td>{{ image.image}}</td>
                <td><img src="{{ image.webPath|thumb(200, 200) }}" /></td>
                <td>{{ image.alt}}</td>              
            </tr>
    {% endfor %}
        </tbody>
    </table>
</div>
<nav>
    <ul class="pager">
        <li><a href="{{path('lotus_image_add')}}">Ajouter une nouvelle image</a></li>
        <li><a href="{{path('lotus_image_list')}}">Sommaire</a></li>
    </ul>
</nav>
{% endblock %}